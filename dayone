    <!-- JavaScript for Charts -->
    <script>
        // --- UTILITY: Label Wrapping Logic (16 chars) ---
        function wrapLabel(label) {
            if (label.length <= 16) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + ' ' + words[i]).length <= 16) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- GLOBAL: Tooltip Configuration ---
        const globalTooltipPlugin = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // --- CHART 1: RADAR CHART (Competitive Analysis) ---
        // Justification: Radar charts are ideal for comparing multiple variables (axes) across different entities.
        const ctxRadar = document.getElementById('radarChart').getContext('2d');
        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: ['Regional Support', 'Cost Efficiency', 'Real-time AI', 'Holistic Scope', 'Local Support'].map(wrapLabel),
                datasets: [
                    {
                        label: 'DayOne AI',
                        data: [10, 9, 10, 10, 10], // High scores across the board
                        fill: true,
                        backgroundColor: 'rgba(255, 107, 0, 0.2)', // Vibrant Orange Translucent
                        borderColor: '#FF6B00',
                        pointBackgroundColor: '#FF6B00',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#FF6B00'
                    },
                    {
                        label: 'Generic Apps',
                        data: [3, 8, 6, 4, 1], // Weak in local/regional
                        fill: true,
                        backgroundColor: 'rgba(148, 163, 184, 0.2)', // Slate Gray
                        borderColor: '#94a3b8',
                        pointBackgroundColor: '#94a3b8',
                        pointBorderColor: '#fff',
                    },
                    {
                        label: 'Dietitians',
                        data: [9, 2, 2, 7, 3], // Good quality but slow/expensive
                        fill: true,
                        backgroundColor: 'rgba(59, 130, 246, 0.2)', // Blue
                        borderColor: '#3b82f6',
                        pointBackgroundColor: '#3b82f6',
                        pointBorderColor: '#fff',
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: '#e2e8f0' },
                        grid: { color: '#e2e8f0' },
                        pointLabels: {
                            font: { size: 12, family: 'Poppins' },
                            color: '#475569'
                        },
                        suggestedMin: 0,
                        suggestedMax: 10
                    }
                },
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, font: { family: 'Poppins' } } },
                    tooltip: globalTooltipPlugin
                }
            }
        });

        // --- CHART 2: DONUT CHART (Target Audience) ---
        // Justification: Perfect for showing composition/parts of a whole (Market Share).
        const ctxDonut = document.getElementById('audienceChart').getContext('2d');
        new Chart(ctxDonut, {
            type: 'doughnut',
            data: {
                labels: ['Busy Professionals', 'Students & Youth', 'Fitness Enthusiasts', 'Regional Users'].map(wrapLabel),
                datasets: [{
                    data: [35, 25, 20, 20],
                    backgroundColor: [
                        '#3b82f6', // Blue
                        '#10b981', // Green
                        '#a855f7', // Purple
                        '#f97316'  // Orange
                    ],
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }, // Hiding legend to use custom HTML legend for layout control
                    tooltip: globalTooltipPlugin
                },
                cutout: '70%'
            }
        });

        // --- CHART 3: BAR CHART (Feasibility) ---
        // Justification: Good for comparing discrete quantities (scores).
        const ctxBar = document.getElementById('feasibilityChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: ['Tech Readiness', 'Market Demand', 'User Readiness', 'Cost Efficiency'].map(wrapLabel),
                datasets: [{
                    label: 'Feasibility Score (1-10)',
                    data: [9.5, 9.8, 8.5, 9.0],
                    backgroundColor: [
                        '#FF6B00',
                        '#FF6B00',
                        '#2E86AB',
                        '#2E86AB'
                    ],
                    borderRadius: 6,
                    barPercentage: 0.6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y', // Horizontal bar chart for easier label reading
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 10,
                        grid: { display: false }
                    },
                    y: {
                        grid: { display: false },
                        ticks: { font: { family: 'Poppins' } }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: globalTooltipPlugin
                }
            }
        });
    </script>
